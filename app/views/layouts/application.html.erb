<!DOCTYPE html>
<html>
  <head>
    <title>Omrails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <% flash.each do |name, msg| %>
    	<%= content_tag(:div, msg, class: "asert alert-#{name}") %>
    	<% end %>

  </body>
</html>
